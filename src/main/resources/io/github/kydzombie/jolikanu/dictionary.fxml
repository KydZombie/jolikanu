<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/24"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.github.kydzombie.jolikanu.dictionary.DictionaryController">
    <columnConstraints>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="60"/>
    </columnConstraints>
    <VBox>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Words" textAlignment="CENTER">
            <padding>
                <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
            </padding>
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="200.0">
            <HBox>
                <Label text="Kokanu">
                    <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                    </padding>
                </Label>
                <TextField fx:id="kokanuSearchBox" onKeyTyped="#updateSearch" HBox.hgrow="ALWAYS"/>
                <padding>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </padding>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </HBox>
            <HBox>
                <Label text="English">
                    <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                    </padding>
                </Label>
                <TextField fx:id="englishSearchBox" onKeyTyped="#updateSearch" HBox.hgrow="ALWAYS"/>
                <padding>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </padding>
            </HBox>
        </VBox>
        <ListView fx:id="wordList" onMouseClicked="#selectionUpdated"/>
    </VBox>
    <VBox maxWidth="1.7976931348623157E308" spacing="4.0" GridPane.columnIndex="1">
        <HBox spacing="4.0">
            <children>
                <Label fx:id="wordLabel" text="Word">
                    <font>
                        <Font size="32.0"/>
                    </font>
                    <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                    </padding>
                </Label>
                <Label fx:id="typeLabel" contentDisplay="CENTER" text="Part of Speech">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </Label>
            </children>
        </HBox>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Definition" fx:id="definitionText">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
        <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
        </padding>
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
    </VBox>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
    </padding>
</GridPane>
